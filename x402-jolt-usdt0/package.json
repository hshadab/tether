{
  "name": "x402-jolt-usdt0",
  "version": "1.0.0",
  "type": "module",
  "description": "x402 payment protocol with JOLT-Atlas zkML proof gates for USDT0",
  "scripts": {
    "server": "node --max-http-header-size=524288 x402/server.js",
    "client": "node x402/client.js",
    "facilitator": "node --max-http-header-size=524288 x402/facilitator.js",
    "dashboard": "npm run dev --prefix demo/http",
    "dev": "concurrently \"npm run server\" \"npm run dashboard\"",
    "generate-cache": "node cache/generate-cache.js",
    "mcp": "node demo/mcp/server.js",
    "fund-wallet": "node scripts/fund-demo-wallet.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "@x402/evm": "^2.3.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "ethers": "^6.13.0",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}
